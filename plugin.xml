<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.plugin.eclias"
            name="Sample Category">
      </category>
      
      <view
            category="org.plugin.eclias"
            class="org.plugin.eclias.views.SampleView"
            icon="icons/sample.png"
            id="org.plugin.eclias.views.SampleView"
            inject="true"
            name="Sample View">
      </view>
      
   </extension>
   
   <extension
         point="org.eclipse.ui.views">
          <category
            id="org.plugin.eclias"
            name="Eclias Tool">
      </category>
      <view
            category="org.plugin.eclias"
            class="org.plugin.eclias.views.EcliasView"
            icon="icons/eclias.png"
            id="org.plugin.eclias.views.EcliasView"
            inject="true"
            name="Eclias Tool">
      </view>
   </extension>
         
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="org.plugin.eclias.views.SampleView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
       <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="org.plugin.eclias.views.EcliasView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
   </extension>
   
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

	
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="org.plugin.eclias.commands.category">
      </category>
      
      <command
            name="Download SVN Metadata"
            categoryId="org.plugin.eclias.commands.category"
            defaultHandler="org.plugin.eclias.handlers.SVNHandler"
            id="org.plugin.eclias.commands.downloadSVNCommitsCommand">
      </command>
      
	  <command
            name="Download Git Metadata"
            categoryId="org.plugin.eclias.commands.category"
            defaultHandler="org.plugin.eclias.handlers.GitHandler"
            id="org.plugin.eclias.commands.downloadGitCommitsCommand">
      </command>
      
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.plugin.eclias.commands.sampleCommand"
            class="org.plugin.eclias.handlers.SampleHandler">
      </handler>
      <handler
            commandId="org.plugin.eclias.commands.sampleCommand1"
            class="org.plugin.eclias.handlers.SampleHandler1">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
       <key
            commandId="org.plugin.eclias.commands.downloadSVNCommitsCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+8"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
             <key
            commandId="org.plugin.eclias.commands.downloadGitCommitsCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+9"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         
         <menu
               label="Historical Information"
               mnemonic="M"
               id="org.plugin.eclias.menus.historicalInformation">
            
            <command
               commandId="org.plugin.eclias.commands.downloadSVNCommitsCommand"
               id="org.plugin.eclias.menus.downloadSVNCommitsCommand"
               mnemonic="D">
         </command>
         
		<command
               commandId="org.plugin.eclias.commands.downloadGitCommitsCommand"
               id="org.plugin.eclias.menus.downloadGitCommitsCommand"
               mnemonic="D">
         </command>
         
         </menu>
                   	
         
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.plugin.eclias.toolbars.sampleToolbar">
            <command
                  commandId="org.plugin.eclias.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="org.plugin.eclias.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.plugin.eclias.toolbars.sampleToolbar">
            <command
                  commandId="org.plugin.eclias.commands.sampleCommand1"
                  icon="icons/eclias.png"
                  tooltip="Starting to extract the corpus"
                  id="org.plugin.eclias.toolbars.sampleCommand1">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   
   
</plugin>
